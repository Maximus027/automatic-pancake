<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/news_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:id="@+id/nyt_news_op_tv"
        android:textSize="@dimen/article_abstract_text_size"
        android:textStyle="italic|bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="@dimen/section_padding"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/article_pic"
            android:background="@drawable/nytimes_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

         <TextView
             android:id="@+id/article_title"
             android:textSize="@dimen/article_title_text_size"
             android:textStyle="bold"
             android:padding="3dp"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content" />
    </LinearLayout>



</LinearLayout>